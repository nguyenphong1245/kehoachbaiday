# ============================================================
# Docker Compose Environment Variables
# ============================================================
# Copy this file to .env and update the values before deployment

# ======================== DATABASE ========================
POSTGRES_USER=khbd
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=khbd

# ======================== FRONTEND ========================
# Port to expose frontend (default: 80)
FRONTEND_PORT=80

# ======================== PRODUCTION SETTINGS ========================
# Update these for your production domain
# Example: https://khbd.yourdomain.com
FRONTEND_BASE_URL=http://localhost

# CORS origins - your frontend domain(s)
# Example: https://khbd.yourdomain.com,https://www.yourdomain.com
CORS_ORIGINS=http://localhost

# Cookie settings
# Set COOKIE_SECURE=true when using HTTPS
COOKIE_SECURE=false
COOKIE_SAMESITE=lax
